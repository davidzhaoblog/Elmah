    </ContentView.Resources>
    <ContentView.Content>
        <CollectionView ItemsSource="{Binding ActionItems}" ItemTemplate="{StaticResource ActionItemSelector}" HorizontalOptions="Start" VerticalOptions="FillAndExpand" ItemsLayout="HorizontalList" />
