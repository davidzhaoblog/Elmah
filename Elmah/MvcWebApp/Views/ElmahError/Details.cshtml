@using Elmah.Models;
@using Elmah.Resx;
@model ElmahErrorModel.DefaultView
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Details");
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>@localizor.Get("Details")</h1>
                <h4>@localizor.Get("ElmahError")</h4>
            </div>
            @if (ViewBag.Status != System.Net.HttpStatusCode.OK)
            {
                <div class="card-body">
                    <div class="text-danger">@ViewBag.StatusMessage</div>
                </div>
            }
            else
            {
                <div class="card-body">
                    @if (ViewBag.Status != System.Net.HttpStatusCode.OK)
                    {
                        <div class="text-danger">@ViewBag.StatusMessage</div>
                    }
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ErrorId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ErrorId)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Application)
                        </dt>
                        <dd class="col-sm-10">
                            <a asp-area="" asp-controller="ElmahApplication" asp-action="Dashboard" asp-route-application="@Model.Application">@Model.Application_Name</a>
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Host)
                        </dt>
                        <dd class="col-sm-10">
                            <a asp-area="" asp-controller="ElmahHost" asp-action="Dashboard" asp-route-host="@Model.Host">@Model.Host_Name</a>
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-10">
                            <a asp-area="" asp-controller="ElmahType" asp-action="Dashboard" asp-route-type="@Model.Type">@Model.Type_Name</a>
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Source)
                        </dt>
                        <dd class="col-sm-10">
                            <a asp-area="" asp-controller="ElmahSource" asp-action="Dashboard" asp-route-source="@Model.Source">@Model.Source_Name</a>
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Message)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Message)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-10">
                            <a asp-area="" asp-controller="ElmahUser" asp-action="Dashboard" asp-route-user="@Model.User">@Model.User_Name</a>
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.StatusCode)
                        </dt>
                        <dd class="col-sm-10">
                            <a asp-area="" asp-controller="ElmahStatusCode" asp-action="Dashboard" asp-route-statuscode="@Model.StatusCode">@Model.StatusCode_Name</a>
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TimeUtc)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TimeUtc)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Sequence)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Sequence)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.AllXml)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AllXml)
                        </dd>
                    </dl>
                </div>
            }
            <div class="card-footer">
                <div class="btn-group" role="group" aria-label="...">
                    <a asp-area="" asp-controller="ElmahError" asp-action="Details" asp-route-errorid="@Model?.ErrorId" class="btn btn-secondary" role="button" title="@localizor.Get("Refresh")">
                        <i class="fa-solid fa-refresh"></i>
                        <span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Refresh")</span>
                    </a>
                    <a asp-area="" asp-controller="ElmahError" asp-action="Edit" asp-route-errorid="@Model?.ErrorId" class="btn btn-secondary" role="button" title="@localizor.Get("Delete")">
                        <i class="fa-solid fa-pen-to-square"></i>
                        <span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Edit")</span>
                    </a>
                    <a asp-area="" asp-controller="ElmahError" asp-action="Delete" asp-route-errorid="@Model?.ErrorId" class="btn btn-secondary" role="button" title="@localizor.Get("Delete")">
                        <i class="fa-solid fa-trash"></i>
                        <span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Delete")</span>
                    </a>
                    <a asp-area="" asp-controller="ElmahError" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                        <i class="fa-solid fa-arrow-left"></i>
                        <span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
