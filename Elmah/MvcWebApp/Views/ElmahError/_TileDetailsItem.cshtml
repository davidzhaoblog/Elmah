@using Elmah.Resx;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Framework.Models;
@model MvcItemViewModel<ElmahErrorModel.DefaultView>
@inject IUIStrings localizor;
<div class="card w-100@(Model.IsCurrentItem ? " border-warning border-3": "")">
    <div class="card-header ps-0 d-flex justify-content-between">
        <div class="form-check nt-list-bulk-select mt-2 ms-0 ps-2">
            <input class="form-check-input ms-1" type="checkbox" value="" id="bulkActionIndividualSelect" @(Model.BulkSelected ? "checked" : "")>
            <h5 class="form-check-label ps-4" for="bulkActionIndividualSelect">
                Please Customize title
            </h5>
        </div>
        <ul class="nav nav-pills btn-group-nt-actions">
            <li class="nav-item">
                <button type="button" class="btn btn-default">
                    <i class="fa-solid fa-circle-question"></i>
                </button>
            </li>
            <li class="nav-item dropdown">
                <a class="btn btn-default" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="fa-solid fa-ellipsis-vertical"></i></a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Dashboard" asp-route-errorid="@Model.Model?.ErrorId" class="btn btn-info" role="button" title="@localizor.Get("Dashboard")">
                            <i class="fa-solid fa-folder-tree"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Dashboard")</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Details" asp-route-errorid="@Model.Model?.ErrorId" class="btn btn-light" role="button" title="@localizor.Get("Details")">
                            <i class="fa fa-briefcase"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Details")</span>
                        </a>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Details")"
                            data-nt-action="@HttpMethods.Get"
                            data-nt-container="@CrudViewContainers.Dialog.ToString()"
                            data-nt-template="@ViewItemTemplateNames.Details.ToString()">
                            <i class="fa fa-briefcase"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Details")</span>
                        </button>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Edit" asp-route-errorid="@Model.Model?.ErrorId" class="btn btn-secondary" role="button" title="@localizor.Get("Edit")">
                            <i class="fa fa-edit"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Edit")</span>
                        </a>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Edit")"
                            data-nt-action="@HttpMethods.Put"
                            data-nt-container="@CrudViewContainers.Dialog.ToString()"
                            data-nt-template="@ViewItemTemplateNames.Edit.ToString()">
                            <i class="fa fa-edit"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Edit")</span>
                        </button>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary btn-nt-inline-editing" title="@localizor.Get("Edit")"
                            data-nt-action="@HttpMethods.Put"
                            data-nt-container="@CrudViewContainers.Inline.ToString()"
                            data-nt-template="@ViewItemTemplateNames.Edit.ToString()">
                            <i class="fa fa-edit"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Edit")</span>
                        </button>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Delete" asp-route-errorid="@Model.Model?.ErrorId" class="btn btn-danger" role="button" title="@localizor.Get("Delete")">
                            <i class="fa fa-trash"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Delete")</span>
                        </a>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Delete")"
                            data-nt-action="@HttpMethods.Delete"
                            data-nt-container="@CrudViewContainers.Dialog.ToString()"
                            data-nt-template="@ViewItemTemplateNames.Delete.ToString()">
                            <i class="fa fa-trash"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Delete")</span>
                        </button>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary btn-nt-inline-editing" title="@localizor.Get("Delete")"
                            data-nt-action="@HttpMethods.Delete"
                            data-nt-container="@CrudViewContainers.Inline.ToString()"
                            data-nt-template="@ViewItemTemplateNames.Delete.ToString()">
                            <i class="fa fa-trash"></i>
                        </button>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="card-body d-flex flex-column">
        @await Html.PartialAsync("~/Views/ElmahError/_Details.cshtml", Model)
    </div>
</div>
