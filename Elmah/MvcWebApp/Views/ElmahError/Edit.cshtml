@using Elmah.Models;
@using Elmah.Resx;
@model Elmah.MvcWebApp.Models.ItemViewModel<Elmah.Models.ElmahErrorModel.DefaultView>
@inject Elmah.MvcWebApp.Models.SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Edit");
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="card">
                <div class="card-header">
                    <h1>@localizor.Get("Edit")</h1>
                    <h4>@localizor.Get("ElmahError")</h4>
                </div>
                @if (Model.Status != System.Net.HttpStatusCode.OK)
                {
                    <div class="card-body">
                        <div class="text-danger">@Model.StatusMessage</div>
                    </div>
                }
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Model!.ErrorId" class="control-label"></label>
                    <input asp-for="Model!.ErrorId" class="form-control" />
                    <span asp-validation-for="Model!.ErrorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Application" class="control-label"></label>
                    <select asp-for="Model!.Application" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[Elmah.Models.Definitions.TopLevelDropDownLists.ElmahApplication.ToString()])" >
                        <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahApplication"))</option>
                    </select>
                    <span asp-validation-for="Model!.Application" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Host" class="control-label"></label>
                    <select asp-for="Model!.Host" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[Elmah.Models.Definitions.TopLevelDropDownLists.ElmahHost.ToString()])" >
                        <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahHost"))</option>
                    </select>
                    <span asp-validation-for="Model!.Host" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Type" class="control-label"></label>
                    <select asp-for="Model!.Type" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[Elmah.Models.Definitions.TopLevelDropDownLists.ElmahType.ToString()])" >
                        <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahType"))</option>
                    </select>
                    <span asp-validation-for="Model!.Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Source" class="control-label"></label>
                    <select asp-for="Model!.Source" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[Elmah.Models.Definitions.TopLevelDropDownLists.ElmahSource.ToString()])" >
                        <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahSource"))</option>
                    </select>
                    <span asp-validation-for="Model!.Source" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Message" class="control-label"></label>
                    <input asp-for="Model!.Message" class="form-control" />
                    <span asp-validation-for="Model!.Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.User" class="control-label"></label>
                    <select asp-for="Model!.User" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[Elmah.Models.Definitions.TopLevelDropDownLists.ElmahUser.ToString()])" >
                        <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahUser"))</option>
                    </select>
                    <span asp-validation-for="Model!.User" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.StatusCode" class="control-label"></label>
                    <select asp-for="Model!.StatusCode" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[Elmah.Models.Definitions.TopLevelDropDownLists.ElmahStatusCode.ToString()])" >
                        <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahStatusCode"))</option>
                    </select>
                    <span asp-validation-for="Model!.StatusCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.TimeUtc" class="control-label"></label>
                    @Html.EditorFor(m=>m.Model!.TimeUtc, "MM/dd/yyyy", new { htmlAttributes = new { @title = localizor.Get("TimeUtc"), @class = "form-control" }})
                    <span asp-validation-for="Model!.TimeUtc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Sequence" class="control-label"></label>
                    <input asp-for="Model!.Sequence" class="form-control" />
                    <span asp-validation-for="Model!.Sequence" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.AllXml" class="control-label"></label>
                    <input asp-for="Model!.AllXml" class="form-control" />
                    <span asp-validation-for="Model!.AllXml" class="text-danger"></span>
                </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group" aria-label="...">
                        <button class="btn btn-primary" role="button" type="submit">
                            <i class="fa-solid fa-check-circle"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Save")</span>
                        </button>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Edit" asp-route-errorid="@Model?.Model!.ErrorId" class="btn btn-secondary" role="button" title="@localizor.Get("Refresh")">
                            <i class="fa-solid fa-refresh"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Refresh")</span>
                        </a>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                            <i class="fa-solid fa-arrow-left"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
