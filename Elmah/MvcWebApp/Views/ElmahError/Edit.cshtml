@using Elmah.Models.Definitions;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Elmah.Resx;
@model MvcItemViewModel<ElmahErrorDataModel.DefaultView>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Edit");
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="card">
                <div class="card-header">
                    <h1>@localizor.Get("Edit")</h1>
                    <h4>@localizor.Get("ElmahError")</h4>
                </div>
                @if (Model.Status != System.Net.HttpStatusCode.OK)
                {
                    <div class="card-body">
                        <div class="text-danger">@Model.StatusMessage</div>
                    </div>
                }
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Model!.ErrorId" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.ErrorId))"></label>
                        <input asp-for="Model!.ErrorId" readonly class="form-control " id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.ErrorId))" name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.ErrorId))" data-nt-value="@Model!.Model!.ErrorId"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.Application" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Application))"></label>
                        <select asp-for="Model!.Application" class="form-control form-select nt-form-data" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahApplication.ToString()])"
                            data-nt-value="@Model!.Model!.Application" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Application))"  name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.Application))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.Host" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Host))"></label>
                        <select asp-for="Model!.Host" class="form-control form-select nt-form-data" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahHost.ToString()])"
                            data-nt-value="@Model!.Model!.Host" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Host))"  name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.Host))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.Type" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Type))"></label>
                        <select asp-for="Model!.Type" class="form-control form-select nt-form-data" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahType.ToString()])"
                            data-nt-value="@Model!.Model!.Type" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Type))"  name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.Type))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.Source" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Source))"></label>
                        <select asp-for="Model!.Source" class="form-control form-select nt-form-data" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahSource.ToString()])"
                            data-nt-value="@Model!.Model!.Source" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Source))"  name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.Source))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.Message" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Message))"></label>
                        <input asp-for="Model!.Message" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Message))" name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.Message))" data-nt-value="@Model!.Model!.Message"/>
                        <span asp-validation-for="Model!.Message" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.Message))"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.User" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.User))"></label>
                        <select asp-for="Model!.User" class="form-control form-select nt-form-data" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahUser.ToString()])"
                            data-nt-value="@Model!.Model!.User" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.User))"  name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.User))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.StatusCode" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.StatusCode))"></label>
                        <select asp-for="Model!.StatusCode" class="form-control form-select nt-form-data" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahStatusCode.ToString()])"
                            data-nt-value="@Model!.Model!.StatusCode" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.StatusCode))"  name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.StatusCode))">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.TimeUtc" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.TimeUtc))"></label>
                        <input asp-for="Model!.TimeUtc" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.TimeUtc))" name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.TimeUtc))" data-nt-value="@Model!.Model!.TimeUtc"/>
                        <span asp-validation-for="Model!.TimeUtc" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.TimeUtc))"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.Sequence" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Sequence))"></label>
                        <input asp-for="Model!.Sequence" readonly class="form-control " id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.Sequence))" name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.Sequence))" data-nt-value="@Model!.Model!.Sequence"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.AllXml" class="control-label" for="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.AllXml))"></label>
                        <input asp-for="Model!.AllXml" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ElmahErrorDataModel.DefaultView.AllXml))" name="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.AllXml))" data-nt-value="@Model!.Model!.AllXml"/>
                        <span asp-validation-for="Model!.AllXml" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ElmahErrorDataModel.DefaultView.AllXml))"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group" aria-label="...">
                        <button class="btn btn-primary" role="button" type="submit">
                            <i class="fa-solid fa-check-circle"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Save")</span>
                        </button>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Edit" asp-route-errorid="@Model!.Model!.ErrorId" class="btn btn-secondary" role="button" title="@localizor.Get("Refresh")">
                            <i class="fa-solid fa-refresh"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Refresh")</span>
                        </a>
                        <a asp-area="" asp-controller="ElmahError" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                            <i class="fa-solid fa-arrow-left"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
