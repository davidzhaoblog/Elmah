@using Framework.Models;
@using Elmah.Models.Definitions;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Elmah.Resx;
@model MvcItemViewModel<ElmahErrorModel.DefaultView>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (ViewBag.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@ViewBag.StatusMessage</div>
    </div>
}
else
{
    <input class="hidden-modal-title" value="@Model.Application" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ErrorId" />
    <div class="form-group">
        <label asp-for="ErrorId" class="control-label"></label>
        <input asp-for="ErrorId" class="form-control" />
        <span asp-validation-for="ErrorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Application" class="control-label"></label>
        <select asp-for="Application" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahApplication.ToString()])" >
            <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahApplication"))</option>
        </select>
        <span asp-validation-for="Application" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Host" class="control-label"></label>
        <select asp-for="Host" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahHost.ToString()])" >
            <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahHost"))</option>
        </select>
        <span asp-validation-for="Host" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahType.ToString()])" >
            <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahType"))</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Source" class="control-label"></label>
        <select asp-for="Source" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahSource.ToString()])" >
            <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahSource"))</option>
        </select>
        <span asp-validation-for="Source" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Message" class="control-label"></label>
        <input asp-for="Message" class="form-control" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User" class="control-label"></label>
        <select asp-for="User" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahUser.ToString()])" >
            <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahUser"))</option>
        </select>
        <span asp-validation-for="User" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StatusCode" class="control-label"></label>
        <select asp-for="StatusCode" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ElmahStatusCode.ToString()])" >
            <option value="" selected>@string.Format(format_Please_Select, localizor.Get("ElmahStatusCode"))</option>
        </select>
        <span asp-validation-for="StatusCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeUtc" class="control-label"></label>
        @Html.EditorFor(m=>m.TimeUtc, "MM/dd/yyyy", new { htmlAttributes = new { @title = localizor.Get("TimeUtc"), @class = "form-control" }})
        <span asp-validation-for="TimeUtc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sequence" class="control-label"></label>
        <input asp-for="Sequence" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="AllXml" class="control-label"></label>
        <input asp-for="AllXml" class="form-control" />
        <span asp-validation-for="AllXml" class="text-danger"></span>
    </div>
}
