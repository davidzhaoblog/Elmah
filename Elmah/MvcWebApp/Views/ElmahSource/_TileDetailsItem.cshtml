@using Elmah.Resx;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Framework.Models;
@model ItemViewModel<ElmahSourceModel>
@inject IUIStrings localizor;
@{
    ViewBag.Status = Model.Status;
}
<div class="card w-100@(Model.IsCurrentItem ? " border-warning border-3": "")">
    <div class="card-header ps-0 d-flex justify-content-between">
        <div class="form-check nt-list-bulk-select mt-2 ms-0 ps-2">
            <input class="form-check-input ms-1" type="checkbox" value="" id="bulkActionIndividualSelect" @(Model.BulkSelected ? "checked" : "")>
            <h5 class="form-check-label ps-4" for="bulkActionIndividualSelect">
                Please Customize title
            </h5>
        </div>
            <div class="btn-group">
                <a asp-area="" asp-controller="ElmahSource" asp-action="Dashboard" asp-route-source="@Model.Model?.Source" class="btn btn-info" role="button" title="@localizor.Get("Dashboard")">
                    <i class="fa-solid fa-folder-tree"></i>
                </a>
                <a asp-area="" asp-controller="ElmahSource" asp-action="Details" asp-route-source="@Model.Model?.Source" class="btn btn-light" role="button" title="@localizor.Get("Details")">
                    <i class="fa fa-briefcase"></i>
                </a>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Details")"
                    data-nt-action="@HttpMethods.Get"
                    data-nt-container="@CrudViewContainers.Dialog.ToString()"
                    data-nt-template="@ViewItemTemplateNames.Details.ToString()">
                    <i class="fa fa-briefcase"></i>
                </button>
                <a asp-area="" asp-controller="ElmahSource" asp-action="Edit" asp-route-source="@Model.Model?.Source" class="btn btn-secondary" role="button" title="@localizor.Get("Edit")">
                    <i class="fa fa-edit"></i>
                </a>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Edit")"
                    data-nt-action="@HttpMethods.Put"
                    data-nt-container="@CrudViewContainers.Dialog.ToString()"
                    data-nt-template="@ViewItemTemplateNames.Edit.ToString()">
                    <i class="fa fa-edit"></i>
                </button>
                <button type="button" class="btn btn-primary btn-nt-inline-editing" title="@localizor.Get("Edit")"
                    data-nt-action="@HttpMethods.Put"
                    data-nt-container="@CrudViewContainers.Inline.ToString()"
                    data-nt-template="@ViewItemTemplateNames.Edit.ToString()">
                    <i class="fa fa-edit"></i>
                </button>
                <a asp-area="" asp-controller="ElmahSource" asp-action="Delete" asp-route-source="@Model.Model?.Source" class="btn btn-danger" role="button" title="@localizor.Get("Delete")">
                    <i class="fa fa-trash"></i>
                </a>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Delete")"
                    data-nt-action="@HttpMethods.Delete"
                    data-nt-container="@CrudViewContainers.Dialog.ToString()"
                    data-nt-template="@ViewItemTemplateNames.Delete.ToString()">
                    <i class="fa fa-trash"></i>
                </button>
                <button type="button" class="btn btn-primary btn-nt-inline-editing" title="@localizor.Get("Delete")"
                    data-nt-action="@HttpMethods.Delete"
                    data-nt-container="@CrudViewContainers.Inline.ToString()"
                    data-nt-template="@ViewItemTemplateNames.Delete.ToString()">
                    <i class="fa fa-trash"></i>
                </button>
            </div>
    </div>
    <div class="card-body d-flex flex-column">
        @await Html.PartialAsync("~/Views/ElmahSource/_Details.cshtml", Model.Model)
    </div>
</div>
