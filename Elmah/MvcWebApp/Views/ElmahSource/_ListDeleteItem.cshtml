@using Framework.Models;
@using Elmah.Models;
@using Elmah.Resx;
@model MvcItemViewModel<ElmahSourceModel>
@inject IUIStrings localizor;
@if (Model.ListSetting.ShowListBulkActionRelated(Model.ListFeatures))
{
    <td class="pt-0 pb-0 nt-list-bulk-select">
    </td>
}
@if (Model.ListSetting.ShowItemButtons(Model.ListFeatures))
{
    <td class="p-0">
    <div class="btn-group btn-group-nt-action-save">
        <button type="button" class="btn btn-secondary btn-nt-action-cancel" data-nt-action="@HttpMethods.Delete">
            <i class="fa-solid fa-circle-xmark"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Cancel")</span>
        </button>
        <button type="button" class="btn btn-primary btn-nt-action" data-nt-action="@HttpMethods.Delete"
            data-nt-container="@CrudViewContainers.Inline.ToString()"
            data-nt-template="@ViewItemTemplateNames.Delete.ToString()">
            <i class="fa-solid fa-check-circle"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Delete")</span>
        </button>
    </div>
    </td>
}
<td class="pt-0 pb-0">@Model!.Model!.Source</td>
@if (Model.ListSetting.ShowItemUIStatus(Model.ListFeatures))
{
    <td class="form-group pt-0 pb-0">
        <input asp-for="Model!.ItemUIStatus______" class="form-control" data-nt-value="@Model!.Model!.ItemUIStatus______" id="@Model!.HtmlId(nameof(ElmahSourceModel.ItemUIStatus______))" name="@Model!.HtmlName(nameof(ElmahSourceModel.ItemUIStatus______))" />
    </td>
}
@if (Model.ListSetting.ShowEditableListDeleteSelect(Model.ListFeatures))
{
    <td class="pt-0 pb-0 nt-editablelist-delete-select">
        <input asp-for="Model!.IsDeleted______" class="form-check-input ms-1" type="checkbox"  id="@Model!.HtmlId(nameof(ElmahSourceModel.IsDeleted______))" name="@Model!.HtmlName(nameof(ElmahSourceModel.IsDeleted______))">
    </td>
}
