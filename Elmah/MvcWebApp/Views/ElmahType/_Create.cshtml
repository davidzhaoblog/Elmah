@using Framework.Models;
@using Elmah.Models.Definitions;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Elmah.Resx;
@model MvcItemViewModel<ElmahTypeDataModel>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (Model.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@Model.StatusMessage</div>
    </div>
}
else
{
    <input class="hidden-modal-title" value="@Model!.Model!.Type" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Model!.Type" class="control-label" for="@Model!.HtmlId(nameof(ElmahTypeDataModel.Type))"></label>
        <input asp-for="Model!.Type" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ElmahTypeDataModel.Type))" name="@Model!.HtmlName(nameof(ElmahTypeDataModel.Type))" data-nt-value="@Model!.Model!.Type"/>
        <span asp-validation-for="Model!.Type" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ElmahTypeDataModel.Type))"></span>
    </div>
}
