@using Elmah.Resx;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Framework.Models;
@model ItemViewModel<ElmahHostModel>
@inject IUIStrings localizor;
@{
    ViewBag.Status = Model.Status;
}
<div class="card w-100@(Model.IsCurrentItem ? " border-warning border-3": "")">
    <div class="card-header">
        <h5 class="card-title">@Model.Model?.Host</h5>
        @*<p class="card-text">Please Customize sub-title</p>*@
    </div>
    <div class="card-body d-flex flex-column">
        @await Html.PartialAsync("~/Views/ElmahHost/_Delete.cshtml", Model.Model)
    </div>
    <div class="card-footer text-muted btn-toolbar">
        <div class="btn-group" role="group" aria-label="...">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Model!.Host" />
                <button class="btn btn-primary" role="button" type="submit" title="@localizor.Get("Delete")">
                    <span class="fa-solid fa-trash"></span>
                </button>
            </form>
            <a asp-area="" asp-controller="ElmahHost" asp-action="Create" class="btn btn-secondary" role="button" title="@localizor.Get("Reset")">
                <i class="fa-solid fa-refresh"></i>
            </a>
            <a asp-area="" asp-controller="ElmahHost" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
        </div>
    </div>
</div>
