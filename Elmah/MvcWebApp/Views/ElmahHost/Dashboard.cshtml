@using Elmah.Models;
@using Elmah.MvcWebApp.Models;
@using Elmah.Resx;
@using Framework.Models;
@model ElmahHostCompositeModel;
@inject ViewFeaturesManager viewFeatureManager;
@inject DashboardViewModelHelper dashboardViewModelHelper;
@inject MvcItemViewModelHelper mvcItemViewModelHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Dashboard");
    var routeId = Model.__Master__.Host;
    var masterVM = await dashboardViewModelHelper.GetElmahHostMvcItemViewModel(Model.__Master__, Model.Get(ElmahHostCompositeModel.__DataOptions__.__Master__));
}
<div class="row">
    <div class="col-12 col-md-8 col-lg-9 nopadding">
        <ul class="nav nav-tabs" id="dashboardTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="lists-tab" data-bs-toggle="tab" data-bs-target="#lists" type="button" role="tab" aria-controls="lists" aria-selected="true"><i class="fa fa-list me-2"></i>@localizor.Get("Tab_Lists")</button>
            </li>
        </ul>
        <div class="tab-content" id="dashboardTabContent">
            <div class="tab-pane fade show active" id="lists" role="tabpanel" aria-labelledby="lists-tab">
                <div class="accordion" id="listsPanels">
                    @if (Model!.Responses.ContainsKey(ElmahHostCompositeModel.__DataOptions__.ElmahErrors_Via_Host))
                    {
                        var vm = await dashboardViewModelHelper.GetElmahErrorPagedSearchViewModel(new ElmahErrorAdvancedQuery { Host = Model.__Master__.Host }, Model.ElmahErrors_Via_Host, Model.Get(ElmahHostCompositeModel.__DataOptions__.ElmahErrors_Via_Host));
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-heading-elmahErrors_Via_Host">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse-elmahErrors_Via_Host" aria-expanded="true" aria-controls="panelsStayOpen-elmahErrors_Via_Host">
                                    @localizor.Get("Section_ElmahErrors_Via_Host")
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapse-elmahErrors_Via_Host" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-heading-elmahErrors_Via_Host">
                                <form id="@vm.UIListSetting.UIListFeatures.SearchFormId" method="post" class="nt-ajax-partial-load-post-formdata"
                                    data-nt-partial-url="@Url.Action("AjaxLoadItems", "ElmahError")"
                                    data-nt-updatetarget="#@vm.UIListSetting.UIListFeatures.ListWrapperId">
                                    <input type="hidden" value="@vm.Query.PageIndex" class="nt-page-index" name="PageIndex" />
                                    <input type="hidden" value="@vm.Query.PageSize" class="nt-page-size" name="PageSize" />
                                    <input type="hidden" value="@vm.Query.OrderBys" class="nt-order-by" name="OrderBys" />
                                    <input type="hidden" value="@vm.Query.PaginationOption" class="nt-pagination-option-field" name="PaginationOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.AdvancedQuery" class="nt-advanced-query" name="AdvancedQuery" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.PagedViewOption" class="nt-paged-view-option-field" name="PagedViewOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.Template" class="nt-template-field" name="Template" />
                                    <!--this is the __Master__ Identifier-->
                                    <input type="hidden" value="@Model.__Master__.Host" name="Host" />
                                </form>
                                <div class="accordion-body p-0">
                                    @await Html.PartialAsync("~/Views/ElmahError/_ListViewsContainer.cshtml",vm)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4 col-lg-3">
        <!-- ElmahHostCompositeModel.__DataOptions__.__Master__ -->
        <div class="nt-list-wrapper"
             id="master"
             data-nt-bs-modalsize="Large"
             data-nt-loaditem-url="@Url.Action("AjaxLoadItem", "ElmahHost")"
             data-nt-createitem-url="@Url.Action("AjaxCreate", "ElmahHost")"
             data-nt-updateitem-url="@Url.Action("AjaxEdit", "ElmahHost")"
             data-nt-deleteitem-url="@Url.Action("AjaxDelete", "ElmahHost")">
            <div class="nt-listitem" data-nt-route-id="@routeId">
                @await Html.PartialAsync("~/Views/ElmahHost/_TileDetailsItem.cshtml", masterVM)
            </div>
        </div>
        <!-- ElmahHostCompositeModel.__DataOptions__.__Master__ -->
    </div>
</div>
<partial name="~/Views/Shared/_CrudActionDialog.cshtml" />
<partial name="~/Views/Shared/_SimpleActionConfirmationDialog.cshtml" />
@section Scripts
    {
    <script>
        const searchFormId_ElmahErrors_Via_Host = "ElmahErrors_Via_HostSearchForm";
        const listWrapperId_ElmahErrors_Via_Host = "ElmahErrors_Via_HostListWrapper";
        $(document).ready($(function () {
            documentReadyForSearchList(searchFormId_ElmahErrors_Via_Host, listWrapperId_ElmahErrors_Via_Host);
            documentReadyForPopups(true, true, true);
        }))
    </script>
}
