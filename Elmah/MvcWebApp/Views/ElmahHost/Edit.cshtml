@using Elmah.Models;
@using Elmah.Resx;
@model ElmahHostModel
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Edit");
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="card">
                <div class="card-header">
                    <h1>@localizor.Get("Edit")</h1>
                    <h4>@localizor.Get("ElmahError")</h4>
                </div>
                @if (ViewBag.Status != System.Net.HttpStatusCode.OK)
                {
                    <div class="card-body">
                        <div class="text-danger">@ViewBag.StatusMessage</div>
                    </div>
                }
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Host" />
                <div class="form-group">
                    <label asp-for="Host" class="control-label"></label>
                    <input asp-for="Host" class="form-control" />
                    <span asp-validation-for="Host" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpatialLocation" class="control-label"></label>
                    <input asp-for="SpatialLocation" class="form-control" />
                    <span asp-validation-for="SpatialLocation" class="text-danger"></span>
                </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group" aria-label="...">
                        <button class="btn btn-primary" role="button" type="submit">
                            <i class="fa-solid fa-check-circle"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Save")</span>
                        </button>
                        <a asp-area="" asp-controller="ElmahHost" asp-action="Edit" asp-route-host="@Model?.Host" class="btn btn-secondary" role="button" title="@localizor.Get("Refresh")">
                            <i class="fa-solid fa-refresh"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Refresh")</span>
                        </a>
                        <a asp-area="" asp-controller="ElmahHost" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                            <i class="fa-solid fa-arrow-left"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
