@using Elmah.Models;
@using Elmah.Resx;
@model ElmahHostModel
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Details");
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>@localizor.Get("Details")</h1>
                <h4>@localizor.Get("ElmahHost")</h4>
            </div>
            @if (ViewBag.Status != System.Net.HttpStatusCode.OK)
            {
                <div class="card-body">
                    <div class="text-danger">@ViewBag.StatusMessage</div>
                </div>
            }
            else
            {
                <div class="card-body">
                    @if (ViewBag.Status != System.Net.HttpStatusCode.OK)
                    {
                        <div class="text-danger">@ViewBag.StatusMessage</div>
                    }
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Host)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Host)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SpatialLocation)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SpatialLocation)
                        </dd>
                    </dl>
                </div>
            }
            <div class="card-footer">
                <div class="btn-group" role="group" aria-label="...">
                    <a asp-area="" asp-controller="ElmahHost" asp-action="Details" asp-route-host="@Model?.Host" class="btn btn-secondary" role="button" title="@localizor.Get("Refresh")">
                        <i class="fa-solid fa-refresh"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Refresh")</span>
                    </a>
                    <a asp-area="" asp-controller="ElmahHost" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                        <i class="fa-solid fa-arrow-left"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
