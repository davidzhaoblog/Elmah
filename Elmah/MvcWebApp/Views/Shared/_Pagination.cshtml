@using Framework.Models;
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer Localizer
@model PaginationResponse
<ul class="pagination pagination-sm">
    <li class="@(Model.EnableFirstAndPrevious ? "page-item" : "page-item disabled" )"><button class="page-link" onclick="pageIndexChanged(1);"><i class="fa-solid fa-angles-left"></i></button></li>
    <li class="@(Model.EnableFirstAndPrevious ? "page-item" : "page-item disabled" )"><button class="page-link" onclick="pageIndexChanged(@(Model.PageIndex - 1));"><i class="fa-solid fa-angle-left"></i></button></li>
    @if (Model.ThreeDotPreCurrent)
    {
        <li class="page-item">...</li>
    }
    @foreach (var pageItem in Model.PreCurrent)
    {
        <li class="page-item"><button class="page-link" onclick="pageIndexChanged(@pageItem);">@pageItem</button></li>
    }
    <li class="page-item active"><button class="page-link">@(Model.PageIndex)</button></li>
    @foreach (var pageItem in Model.PostCurrent)
    {
        <li class="page-item"><button class="page-link" onclick="pageIndexChanged(@pageItem);">@pageItem</button></li>
    }
    @if (Model.ThreeDotPostCurrent)
    {
        <li class="page-item">...</li>
    }
    <li class="@(Model.EnableLastAndNext ? "page-item" : "page-item disabled" )"><button class="page-link" onclick="pageIndexChanged(@(Model.PageIndex + 1));"><i class="fa-solid fa-angle-right"></i></button></li>
    <li class="@(Model.EnableLastAndNext? "page-item" : "page-item disabled" )"><button class="page-link" onclick="pageIndexChanged(@(Model.LastPageIndex));"><i class="fa-solid fa-angles-right"></i></button></li>
</ul>
