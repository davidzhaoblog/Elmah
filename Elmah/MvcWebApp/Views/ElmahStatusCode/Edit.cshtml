@using Elmah.Models;
@using Elmah.Resx;
@model ElmahStatusCodeModel
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Edit");
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
<h1>@localizor.Get("Edit")</h1>
<h4>@localizor.Get("ElmahStatusCode")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StatusCode" class="control-label"></label>
                    <input asp-for="StatusCode" class="form-control" />
                    <span asp-validation-for="StatusCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="@localizor.Get("Save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">@localizor.Get("Back_to_List")</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
