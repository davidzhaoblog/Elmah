@using Elmah.Models;
@using Elmah.Resx;
@model ElmahStatusCodeModel
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Create");
}
<h1>@localizor.Get("Create")</h1>
<h4>@localizor.Get("ElmahHost")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Host" class="control-label"></label>
                <input asp-for="Host" class="form-control" />
                <span asp-validation-for="Host" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpatialLocation" class="control-label"></label>
                <input asp-for="SpatialLocation" class="form-control" />
                <span asp-validation-for="SpatialLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizor.Get("Create")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">@localizor.Get("Back_to_List")</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
