@using Framework.Models;
@using Elmah.Models;
@using Elmah.Resx;
@model ElmahStatusCodeModel
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (ViewBag.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@ViewBag.StatusMessage</div>
    </div>
}
else
{
    <input class="hidden-modal-title" value="@Model.Name" type="hidden" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusCode)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
}
