@using Elmah.Resx;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Framework.Models;
@model ItemViewModel<ElmahStatusCodeModel>
@inject IUIStrings localizor;
@{
    ViewBag.Status = Model.Status;
}
<div class="card w-100@(Model.IsCurrentItem ? " border-warning border-3": "")">
    <div class="card-header">
        <h5 class="card-title">@Model.Model?.Name</h5>
        @*<p class="card-text">Please Customize sub-title</p>*@
    </div>
    <form>
        <div class="card-body d-flex flex-column">
            @await Html.PartialAsync("~/Views/ElmahStatusCode/_Edit.cshtml", Model.Model)
        </div>
        <div class="card-footer text-muted btn-toolbar">
            <div class="btn-group" role="group" aria-label="...">
                <button class="btn btn-primary" role="button" type="submit">
                    <i class="fa-solid fa-check-circle"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Save")</span>
                </button>
                <a asp-area="" asp-controller="ElmahStatusCode" asp-action="Edit" asp-route-statuscode="@Model.Model?.StatusCode" class="btn btn-secondary" role="button" title="@localizor.Get("Refresh")">
                    <i class="fa-solid fa-refresh"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Refresh")</span>
                </a>
                <a asp-area="" asp-controller="ElmahStatusCode" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                    <i class="fa-solid fa-arrow-left"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                </a>
            </div>
        </div>
    </form>
</div>
