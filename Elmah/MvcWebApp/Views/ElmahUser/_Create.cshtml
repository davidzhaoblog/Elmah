@using Framework.Models;
@using Elmah.Models.Definitions;
@using Elmah.MvcWebApp.Models;
@using Elmah.Models;
@using Elmah.Resx;
@model MvcItemViewModel<ElmahUserModel>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (Model.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@Model.StatusMessage</div>
    </div>
}
else
{
    <input class="hidden-modal-title" value="@Model!.Model!.User" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Model!.User" class="control-label" for="@Model!.HtmlId(nameof(ElmahUserModel.User))"></label>
        <input asp-for="Model!.User" class="form-control" data-nt-value="@Model!.Model!.User" id="@Model.HtmlId(nameof(ElmahUserModel.User))"  name="@Model.HtmlName(nameof(ElmahUserModel.User))"/>
        <span asp-validation-for="Model!.User" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ElmahUserModel.User))"></span>
    </div>
}
