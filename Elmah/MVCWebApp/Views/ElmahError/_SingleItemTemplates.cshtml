@model Elmah.Models.ElmahErrorModel.DefaultView
@inject Elmah.Resx.IUIStrings localizor;

@if (ViewBag.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@ViewBag.StatusMessage</div>
    </div>
}
else if ((Framework.Models.ViewItemTemplateNames)ViewBag.Template == Framework.Models.ViewItemTemplateNames.DisplayItem)
{
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ErrorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ErrorId)
        </dd>
    </dl>
}
else if ((Framework.Models.ViewItemTemplateNames)ViewBag.Template == Framework.Models.ViewItemTemplateNames.ReadonlyItem)
{
    <div class="form-group">
        <label asp-for="Message" class="control-label"></label>
        <input asp-for="Message" class="form-control" readonly/>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
}
else // Create or Edit
{
    <div class="form-group">
        <label asp-for="Message" class="control-label"></label>
        <input asp-for="Message" class="form-control" readonly/>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
}
