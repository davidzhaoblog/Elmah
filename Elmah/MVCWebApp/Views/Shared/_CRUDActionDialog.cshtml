@using Elmah.Resx;
@inject IUIStrings localizor;
<div class="modal fade" id="crudActionDialog" tabindex="-1" aria-labelledby="crudActionDialogLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="crudActionDialogLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@localizor.Get("Close")</button>
                <button type="button" class="btn btn-primary btn-save">@localizor.Get("Save")</button>
                <button type="button" class="btn btn-primary btn-delete">@localizor.Get("Delete")</button>
            </div>
        </div>
    </div>
</div>