@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<Elmah.Resx.UIStringResourcePerApp> localizer_UIStringResourcePerApp;
@inject IStringLocalizer<Framework.Resx.UIStringResource> localizer_UIStringResource;
@{
    ViewBag.Title = localizer_UIStringResource["Common_ContactPageTitle"];
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>
<section class="contact">
    <header>
        <h3>@localizer_UIStringResource["Contact_PhoneText"]</h3>
    </header>
    <p>
        <span class="label">@localizer_UIStringResource["Contact_PhoneText"]:</span>
        <span>425.555.0100</span>
    </p>
</section>
<section class="contact">
    <header>
        <h3>@localizer_UIStringResource["Common_EmailLabelText"]</h3>
    </header>
    <p>
        <span class="label">@localizer_UIStringResource["Common_EmailLabelText"]:</span>
        <span><a href="mailto:Support@example.com">Support@example.com</a></span>
    </p>
</section>
<section class="contact">
    <header>
        <h3>@localizer_UIStringResource["Contact_AddressText"]</h3>
    </header>
    <p>
        One Microsoft Way<br />
        Redmond, WA 98052-6399
    </p>
</section>
